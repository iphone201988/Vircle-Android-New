<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.tech.vircle.ui.home.settings.SettingsFragmentVM" />


        <variable
            name="bean"
            type="com.tech.vircle.data.model.ProfileUser" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/light_mode_background"
        android:layout_height="match_parent"
        android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.settings.profile.ProfileFragment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvProfileSettings"
            style="@style/TextView.bold"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/profile_settings"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:padding="@dimen/_4sdp"
            android:tint="@color/black"
            android:rotation="180"
            android:src="@drawable/ic_next"
            app:layout_constraintBottom_toBottomOf="@+id/tvProfileSettings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvProfileSettings" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivaPerson"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_stock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProfileSettings"
          />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPerson"
            android:layout_width="@dimen/_78sdp"
            android:layout_height="@dimen/_78sdp"
            app:layout_constraintBottom_toBottomOf="@+id/ivaPerson"
            android:src="@drawable/user_fill"
            setImageFromUrl="@{bean.avatar}"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/ivaPerson"
            app:layout_constraintStart_toStartOf="@+id/ivaPerson"
            app:layout_constraintTop_toTopOf="@+id/ivaPerson"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivEdit"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:layout_marginBottom="-6dp"
            android:src="@drawable/editpicture"
            app:layout_constraintBottom_toBottomOf="@+id/ivaPerson"
            app:layout_constraintEnd_toEndOf="@+id/ivaPerson"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            style="@style/TextView.bold"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="@string/name"
            android:textColor="@color/black3"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toTopOf="@+id/etName"
            app:layout_constraintStart_toStartOf="@+id/etName" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etName"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_43sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_48sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/et_bg"
            android:backgroundTint="@color/color_F6F6F6"
            android:maxLength="15"
            android:text="@{bean.name}"
            android:imeOptions="actionNext"
            android:importantForAutofill="noExcludeDescendants"
            android:inputType="textPersonName"
            android:nextFocusForward="@+id/etSurname"
            android:paddingStart="@dimen/_10sdp"
            app:layout_constraintEnd_toStartOf="@+id/etSurname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivaPerson" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintEnd_toEndOf="@+id/etName"
            android:background="@color/color_999999"
            app:layout_constraintStart_toStartOf="@+id/etName"
            app:layout_constraintBottom_toBottomOf="@+id/etName"/>




        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSurname"
            style="@style/TextView.bold"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="@string/surname"
            android:textColor="@color/black3"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toTopOf="@+id/etSurname"
            app:layout_constraintStart_toStartOf="@+id/etSurname" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etSurname"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_43sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@drawable/et_bg"
            android:backgroundTint="@color/color_F6F6F6"
            android:maxLength="15"
            android:imeOptions="actionNext"
            android:text="@{bean.surname}"
            android:nextFocusForward="@id/etEmailAddress"
            android:importantForAutofill="noExcludeDescendants"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@+id/etName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/etName"
            app:layout_constraintTop_toTopOf="@+id/etName" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintEnd_toEndOf="@+id/etSurname"
            android:background="@color/color_999999"
            app:layout_constraintStart_toStartOf="@+id/etSurname"
            app:layout_constraintBottom_toBottomOf="@+id/etSurname"/>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEmailAddress"
            style="@style/TextView.bold"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="@string/email_address"
            android:textColor="@color/black3"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toTopOf="@+id/etEmailAddress"
            app:layout_constraintStart_toStartOf="@+id/etEmailAddress" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etEmailAddress"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_43sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/et_bg"
            android:focusable="false"
            android:backgroundTint="@color/color_F6F6F6"
            android:imeOptions="actionNext"
            android:text="@{bean.email}"
            android:importantForAutofill="noExcludeDescendants"
            android:inputType="textEmailAddress"
            android:nextFocusForward="@+id/etCharacteristics"
            app:layout_constraintEnd_toEndOf="@+id/etSurname"
            android:paddingStart="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etSurname" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintEnd_toEndOf="@+id/etEmailAddress"
            android:background="@color/color_999999"
            app:layout_constraintStart_toStartOf="@+id/etEmailAddress"
            app:layout_constraintBottom_toBottomOf="@+id/etEmailAddress"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGender"
            style="@style/TextView.bold"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="@string/gender"
            android:textColor="@color/black3"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toTopOf="@+id/etGender"
            app:layout_constraintStart_toStartOf="@+id/etGender" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etGender"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_43sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/et_bg"
            android:focusable="false"
            android:backgroundTint="@color/color_F6F6F6"
            android:maxLength="15"
            android:text="@{bean.gender}"
            android:imeOptions="actionDone"
            android:importantForAutofill="noExcludeDescendants"
            android:inputType="textPersonName"
            android:onClick="@{v->vm.onClick(v)}"
            android:paddingStart="@dimen/_10sdp"
            app:layout_constraintEnd_toStartOf="@+id/etAge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmailAddress" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintEnd_toEndOf="@+id/etGender"
            android:background="@color/color_999999"
            app:layout_constraintStart_toStartOf="@+id/etGender"
            app:layout_constraintBottom_toBottomOf="@+id/etGender"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/mi_select"
            app:layout_constraintBottom_toBottomOf="@+id/etGender"
            app:layout_constraintEnd_toEndOf="@+id/etGender"
            app:layout_constraintTop_toTopOf="@+id/etGender" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAge"
            style="@style/TextView.bold"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="@string/age"
            android:textColor="@color/black3"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toTopOf="@+id/etAge"
            app:layout_constraintStart_toStartOf="@+id/etAge" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etAge"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_43sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@drawable/et_bg"
            android:backgroundTint="@color/color_F6F6F6"
            android:focusable="false"
            android:maxLength="4"
            android:text="@{String.valueOf(bean.age)}"
            android:imeOptions="actionDone"
            android:importantForAutofill="noExcludeDescendants"
            android:inputType="number"
            android:onClick="@{v->vm.onClick(v)}"
            android:paddingStart="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@+id/etGender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/etGender"
            app:layout_constraintTop_toTopOf="@+id/etGender" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintEnd_toEndOf="@+id/etAge"
            android:background="@color/color_999999"
            app:layout_constraintStart_toStartOf="@+id/etAge"
            app:layout_constraintBottom_toBottomOf="@+id/etAge"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/mi_select"
            app:layout_constraintBottom_toBottomOf="@+id/etAge"
            app:layout_constraintEnd_toEndOf="@+id/etAge"
            app:layout_constraintTop_toTopOf="@+id/etAge" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCharacteristics"
            style="@style/TextView.bold"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="@string/characteristics"
            android:textColor="@color/black3"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toTopOf="@+id/etCharacteristics"
            app:layout_constraintStart_toStartOf="@+id/etCharacteristics" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCharacteristics"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_43sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/et_bg"
            android:backgroundTint="@color/color_F6F6F6"
            android:focusable="false"
            android:imeOptions="actionNext"
            android:importantForAutofill="noExcludeDescendants"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:nextFocusForward="@+id/etPersonalDetails"
            android:onClick="@{v->vm.onClick(v)}"
            android:paddingStart="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="@+id/etSurname"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etAge" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCharacteristics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/etCharacteristics"
            app:layout_constraintTop_toTopOf="@+id/etCharacteristics"
            app:layout_constraintStart_toStartOf="@+id/etCharacteristics"
            android:layout_marginBottom="@dimen/_6sdp"
            android:visibility="gone"
            android:paddingEnd="@dimen/_28sdp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="@+id/etCharacteristics"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/characteristics_rv_item"
            tools:itemCount="5"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintEnd_toEndOf="@+id/etCharacteristics"
            android:background="@color/color_999999"
            app:layout_constraintStart_toStartOf="@+id/etCharacteristics"
            app:layout_constraintBottom_toBottomOf="@+id/etCharacteristics"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPersonalDetails"
            style="@style/TextView.bold"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="@string/personal_details"
            android:textColor="@color/black3"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toTopOf="@+id/etPersonalDetails"
            app:layout_constraintStart_toStartOf="@+id/etPersonalDetails" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etPersonalDetails"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/et_bg"
            android:minHeight="124dp"
            android:maxHeight="124dp"
            android:scrollbars="vertical"
            android:overScrollMode="always"
            android:gravity="top|start"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:importantForAutofill="noExcludeDescendants"
            android:backgroundTint="@color/color_F6F6F6"
            android:text="@{bean.personal_details}"
            android:paddingStart="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="@+id/etSurname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCharacteristics" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintEnd_toEndOf="@+id/etCharacteristics"
            android:background="@color/color_999999"
            app:layout_constraintStart_toStartOf="@+id/etCharacteristics"
            app:layout_constraintBottom_toBottomOf="@+id/etCharacteristics"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnDeleteMyAccount"
            style="@style/TextView.bold"
            android:layout_width="0dp"
            android:layout_height="@dimen/_43sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:background="@drawable/delete_btn_bg"
            android:gravity="center"
            android:onClick="@{v->vm.onClick(v)}"
            android:paddingHorizontal="@dimen/_26sdp"
            android:text="@string/delete_my_account"
            android:textColor="@color/color_B52626"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toEndOf="@+id/btnSaveChanges"
            app:layout_constraintStart_toStartOf="@+id/btnSaveChanges"
            app:layout_constraintTop_toBottomOf="@+id/etPersonalDetails" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnSaveChanges"
            style="@style/TextView.bold"
            android:layout_width="0dp"
            android:layout_height="@dimen/_43sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/btn_radius_50"
            android:gravity="center"
            android:onClick="@{v->vm.onClick(v)}"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:paddingHorizontal="@dimen/_26sdp"
            android:text="@string/save_changes"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDeleteMyAccount" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextView.bold"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="@string/characteristics"
            android:visibility="invisible"
            android:textColor="@color/black3"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintTop_toBottomOf="@+id/btnSaveChanges"
            app:layout_constraintStart_toStartOf="@+id/etCharacteristics" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>