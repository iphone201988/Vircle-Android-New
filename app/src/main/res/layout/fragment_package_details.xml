<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tech.vircle.ui.home.settings.SettingsFragmentVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/light_mode_background"
        android:layout_height="match_parent"
        tools:context=".ui.home.settings.package_details.PackageDetailsFragment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPackageDetails"
            style="@style/TextView.bold"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/package_details"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:padding="@dimen/_4sdp"
            android:rotation="180"
            android:tint="@color/black"
            android:src="@drawable/ic_next"
            app:layout_constraintBottom_toBottomOf="@+id/tvPackageDetails"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPackageDetails" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPackageDetails"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:clipToPadding="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_20sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/btnCancelSubscription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPackageDetails"
            tools:itemCount="14"
            tools:listitem="@layout/rv_package_details_item" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnCancelSubscription"
            style="@style/TextView.semibold"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_55sdp"
            android:background="@drawable/btn_radius_50"
            android:backgroundTint="@color/color_F0F0F0"
            android:gravity="center"
            android:onClick="@{v->vm.onClick(v)}"
            android:paddingHorizontal="@dimen/_26sdp"
            android:text="@string/cancel_subscription"
            android:textColor="@color/black2"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rvPackageDetails"
            app:layout_constraintStart_toStartOf="@+id/rvPackageDetails" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>